{
  "builders": [
    {
      "boot_command": [
        "<up><wait><tab>",
        " no_timer_check biosdevname=0 net.ifnames=0",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `ks_path` }}",
        "<enter>"
      ],
      "cpus": "{{ user `vm_build_cpus` }}",
      "disk_size": "{{ user `vm_disk_size` }}",
      "guest_os_type": "{{ user `vm_guest_os` }}",
      "host_interfaces": "{{ user `parallels_host_interfaces` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `vm_build_memory` }}",
      "output_directory": "{{ user `build_directory` }}/{{ build_type }}",
      "parallels_tools_mode": "disable",
      "prlctl": [
        [ "set", "{{ .Name }}", "--3d-accelerate", "off" ],
        [ "set", "{{ .Name }}", "--adaptive-hypervisor", "on" ],
        [ "set", "{{ .Name }}", "--battery-status", "off" ],
        [ "set", "{{ .Name }}", "--bounce-dock-icon-when-app-flashes", "off" ],
        [ "set", "{{ .Name }}", "--device-del", "sound0" ],
        [ "set", "{{ .Name }}", "--device-del", "usb" ],
        [ "set", "{{ .Name }}", "--keyboard-optimize", "off" ],
        [ "set", "{{ .Name }}", "--sh-app-guest-to-host", "off" ],
        [ "set", "{{ .Name }}", "--shared-clipboard", "off" ],
        [ "set", "{{ .Name }}", "--shf-host-defined", "off" ],
        [ "set", "{{ .Name }}", "--show-guest-app-folder-in-dock", "off" ],
        [ "set", "{{ .Name }}", "--show-guest-notifications", "off" ],
        [ "set", "{{ .Name }}", "--smart-mouse-optimize", "off" ],
        [ "set", "{{ .Name }}", "--sync-host-printers", "off" ],
        [ "set", "{{ .Name }}", "--time-sync", "off" ],
        [ "set", "{{ .Name }}", "--videosize", "4" ]
      ],
      "prlctl_post": [
        [ "set", "{{ .Name }}", "--cpus", "{{ user `vm_cpus` }}" ],
        [ "set", "{{ .Name }}", "--device-del", "cdrom0" ],
        [ "set", "{{ .Name }}", "--device-del", "net0" ],
        [ "set", "{{ .Name }}", "--memsize", "{{ user `vm_memory` }}" ]
      ],
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "parallels-iso",
      "vm_name": "{{ user `vm_name` | replace_all \" \" \"_\" }}"
    },
    {
      "boot_command": [
        "<up><wait><tab>",
        " no_timer_check biosdevname=0 net.ifnames=0",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `ks_path` }}",
        "<enter>"
      ],
      "cpus": "{{ user `vm_build_cpus` }}",
      "disk_adapter_type": "{{ user `vmware_disk_adapter` }}",
      "disk_size": "{{ user `vm_disk_size` }}",
      "disk_type_id": "0",
      "display_name": "{{ user `vm_name` }}",
      "guest_os_type": "{{ user `vm_guest_os` }}",
      "headless": "{{ user `vm_headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `vm_build_memory` }}",
      "network_adapter_type": "{{ user `vmware_network_adapter` }}",
      "output_directory": "{{ user `build_directory` }}/{{ build_type }}",
      "shutdown_command": "/sbin/halt -h -p",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}",
      "vmdk_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "rtc.diffFromUTC": "0",
        "svga.autodetect": "false",
        "svga.vramSize": "16777216",
        "tools.syncTime": "false"
      },
      "vmx_data_post": {
        "ide0:0.present": "false",
        "memsize": "{{ user `vm_memory` }}",
        "numvcpus": "{{ user `vm_cpus` }}"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "post-processors": [
    [
      {
        "compression_level": 9,
        "output": "{{ user `build_directory` }}/vagrant/{{ .Provider }}.box",
        "type": "vagrant",
        "vagrantfile_template": "{{ template_dir }}/files/Vagrantfile.rb"
      },
      {
        "access_token": "{{ user `cloud_token` }}",
        "box_tag": "{{ user `box_tag` }}",
        "type": "vagrant-cloud",
        "version": "{{ user `box_version` }}"
      }
    ]
  ],
  "provisioners": [
    {
      "script": "{{ template_dir }}/files/provision.sh",
      "type": "shell"
    },
    {
      "script": "{{ template_dir }}/files/cleanup.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "box_tag": "{{ user `cloud_organization` }}/{{ user `os_product` | lower }}{{ user `os_major` }}",
    "box_version": "{{ user `os_build` }}.{{ timestamp }}",
    "build_directory": "{{ template_dir }}/build/{{ user `os_product` }}-{{ user `os_major` }}.{{ user `os_minor` }}.{{ user `os_build` }}-{{ user `os_arch` }}",
    "cloud_organization": "{{ env `VAGRANT_CLOUD_ORGANIZATION` }}",
    "cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "http_directory": "{{ template_dir }}/http",
    "iso_checksum_url": "{{ user `mirror_url` }}/{{ user `mirror_path` }}/sha256sum.txt",
    "iso_url": "{{ user `mirror_url` }}/{{ user `mirror_path` }}/{{ user `os_product` }}-{{ user `os_major` }}-{{ user `os_arch` }}-Minimal-{{ user `os_build` }}.iso",
    "ks_path": "ks.cfg",
    "mirror_path": "{{ user `os_major` }}.{{ user `os_minor` }}.{{ user `os_build` }}/isos/{{ user `os_arch` }}",
    "mirror_url": "https://mirrors.kernel.org/centos",
    "os_arch": "",
    "os_build": "",
    "os_major": "",
    "os_minor": "",
    "os_product": "",
    "parallels_host_interfaces": "vnic0,vnic1,vnic2,vnic3,vnic4,vnic5,vnic6,vnic7,vnic8,vnic9",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_username": "root",
    "vm_build_cpus": "2",
    "vm_build_memory": "544",
    "vm_cpus": "1",
    "vm_disk_size": "20480",
    "vm_guest_os": "{{ user `os_product` | lower }}",
    "vm_headless": "true",
    "vm_memory": "512",
    "vm_name": "{{ user `os_product` }} {{ user `os_major` }}",
    "vmware_disk_adapter": "pvscsi",
    "vmware_network_adapter": "vmxnet3"
  }
}
