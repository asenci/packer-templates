{
  "builders": [
    {
      "boot_command": [
        "<up><wait><tab>",
        " no_timer_check biosdevname=0 net.ifnames=0",
        " ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{ user `ks_path` }}",
        "<enter>"
      ],
      "cpus": "{{ user `vm_build_cpus` }}",
      "disk_adapter_type": "{{ user `vm_disk_adapter` }}",
      "disk_size": "{{ user `vm_disk_size` }}",
      "display_name": "{{ user `vm_name` }}",
      "guest_os_type": "{{ user `vm_guest_os` }}",
      "headless": "{{ user `vm_headless` }}",
      "http_directory": "{{ user `http_directory` }}",
      "iso_checksum_url": "{{ user `iso_checksum_url` }}",
      "iso_url": "{{ user `iso_url` }}",
      "memory": "{{ user `vm_build_memory` }}",
      "network_adapter_type": "{{ user `vm_network_adapter` }}",
      "output_directory": "{{ user `build_directory` }}/{{ build_type }}/{{ user `vm_name` | replace_all \" \" \"_\" }}.vmwarevm",
      "shutdown_command": "sudo /sbin/halt -h -p",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_private_key_file": "{{ user `ssh_private_key_file` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vmware-iso",
      "vm_name": "{{ user `vm_name` }}",
      "vmdk_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "rtc.diffFromUTC": "0",
        "tools.syncTime": "false"
      },
      "vmx_data_post": {
        "ide0:0.present": "false",
        "memsize": "{{ user `vm_memory` }}",
        "numvcpus": "{{ user `vm_cpus` }}"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "post-processors": [
    [
      {
        "compression_level": 9,
        "output": "{{ user `build_directory` }}/vagrant/{{ .Provider }}.box",
        "type": "vagrant",
        "vagrantfile_template": "{{ template_dir }}/files/Vagrantfile.rb"
      },
      {
        "access_token": "{{ user `cloud_token` }}",
        "box_tag": "{{ user `box_tag` }}",
        "type": "vagrant-cloud",
        "version": "{{ user `box_version` }}"
      }
    ]
  ],
  "provisioners": [
    {
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'",
      "expect_disconnect": true,
      "script": "{{ template_dir }}/files/provision.sh",
      "type": "shell"
    },
    {
      "execute_command": "{{ .Vars }} sudo -E bash '{{ .Path }}'",
      "script": "{{ template_dir }}/files/cleanup.sh",
      "type": "shell"
    }
  ],
  "variables": {
    "box_tag": "{{ user `cloud_organization` }}/{{ user `os_product` | lower }}{{ user `os_major` }}",
    "box_version": "{{ user `os_build` }}.{{ timestamp }}",
    "build_directory": "{{ template_dir }}/build/{{ user `os_product` }}-{{ user `os_major` }}.{{ user `os_minor` }}.{{ user `os_build` }}-{{ user `os_arch` }}",
    "cloud_organization": "{{ env `VAGRANT_CLOUD_ORGANIZATION` }}",
    "cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "http_directory": "{{ template_dir }}/http",
    "iso_checksum_url": "{{ user `mirror_url` }}/{{ user `mirror_path` }}/sha256sum.txt",
    "iso_url": "{{ user `mirror_url` }}/{{ user `mirror_path` }}/{{ user `os_product` }}-{{ user `os_major` }}-{{ user `os_arch` }}-Minimal-{{ user `os_build` }}.iso",
    "ks_path": "ks.cfg",
    "mirror_path": "{{ user `os_major` }}.{{ user `os_minor` }}.{{ user `os_build` }}/isos/{{ user `os_arch` }}",
    "mirror_url": "https://mirrors.kernel.org/centos",
    "os_arch": "",
    "os_build": "",
    "os_major": "",
    "os_minor": "",
    "os_product": "",
    "ssh_port": "22",
    "ssh_private_key_file": "{{ template_dir }}/files/id_rsa",
    "ssh_username": "vagrant",
    "vm_build_cpus": "2",
    "vm_build_memory": "544",
    "vm_cpus": "1",
    "vm_disk_adapter": "pvscsi",
    "vm_disk_size": "20480",
    "vm_guest_os": "{{ user `os_product` | lower }}{{ user `os_major` }}-64",
    "vm_headless": "true",
    "vm_memory": "512",
    "vm_name": "{{ user `os_product` }}",
    "vm_network_adapter": "vmxnet3"
  }
}
