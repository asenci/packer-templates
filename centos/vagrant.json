{
  "builders": [
    {
      "headless": "{{ user `vm_headless` }}",
      "name": "vmware_desktop-vagrant",
      "output_directory": "{{ user `build_directory` }}/vagrant/{{ user `vm_name` }}.vmwarevm",
      "shutdown_command": "/sbin/halt -h -p",
      "source_path": "{{ user `build_directory` }}/base/{{ user `vm_name` }}.vmwarevm/{{ user `vm_name` }}.vmx",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "ssh_username": "{{ user `ssh_username` }}",
      "type": "vmware-vmx",
      "vm_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "ethernet0.connectionType": "nat",
        "ethernet0.present": "TRUE",
        "ethernet0.virtualDev": "{{ user `vm_network_adapter` }}"
      },
      "vmx_remove_ethernet_interfaces": true
    }
  ],
  "post-processors": [
    [
      {
        "compression_level": 9,
        "output": "{{ user `build_directory` }}/vagrant/{{ user `vm_name` }}.{{ .Provider }}.box",
        "type": "vagrant",
        "vagrantfile_template": "files/Vagrantfile.rb"
      },
      {
        "access_token": "{{ user `cloud_token` }}",
        "box_tag": "{{ user `box_tag` }}",
        "type": "vagrant-cloud",
        "version": "{{ user `box_version` }}"
      }
    ]
  ],
  "provisioners": [
    {
      "destination": "/etc/sudoers.d/vagrant",
      "source": "files/sudoers-vagrant",
      "type": "file"
    },
    {
      "destination": "/etc/yum/vars/infra",
      "source": "files/yum-vars-infra-vagrant",
      "type": "file"
    },
    {
      "only": [
        "vmware_desktop-vagrant"
      ],
      "script": "scripts/vmware.sh",
      "type": "shell"
    },
    {
      "scripts": [
        "scripts/nfs.sh",
        "scripts/rng-tools.sh",
        "scripts/rsync.sh",
        "scripts/tuned.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "box_tag": "{{ user `cloud_org` }}/{{ user `os_product` | lower }}{{ user `os_major` }}",
    "box_version": "{{ user `os_build` }}.{{ timestamp }}",
    "build_directory": "{{ template_dir }}/build",
    "cloud_org": "",
    "cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
    "os_arch": "",
    "os_build": "",
    "os_major": "",
    "os_minor": "",
    "os_product": "",
    "ssh_password": "changeme",
    "ssh_port": "22",
    "ssh_username": "root",
    "vm_headless": "true",
    "vm_name": "{{ user `os_product` }}-{{ user `os_major` }}.{{ user `os_minor` }}.{{ user `os_build` }}-{{ user `os_arch` }}",
    "vm_network_adapter": "vmxnet3"
  }
}
